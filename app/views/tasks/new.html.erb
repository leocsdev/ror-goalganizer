<section>
  <div class="container">  
    <h1>Add Task For <%= @goal.title %></h1>

    <%= form_with model: [@goal, @task], local: true do |f| %>
      <% if @task.errors.any? %>
        <ul class="new-error-ul">
          <% @task.errors.full_messages.each do |m| %>
            <li class="alert alert-warning alert-dismissible fade show" role="alert">

              <strong><%= m %></strong>

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </li>
          <% end %>
        </ul>
      <% end %>

      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      
      <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </p>

      <p>
        <%#= f.label :deadline %>
        <%= f.label 'Due Date' %>
        <%= f.date_field :deadline %>
      </p>

      <p>
        <%= f.label :status %>
        <%#= f.text_field :status %>
        <%= f.select :status, ['Started', 'Completed'] %>
      </p>

      <p>
        <%= f.submit 'Add Task' %>
      </p>

      <p>
        <%= link_to 'Cancel', goal_path(@goal) %>
      </p>
    <% end %>
  </div>
</section>