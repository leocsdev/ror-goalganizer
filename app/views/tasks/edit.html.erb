<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <h1 class="mb-4 text-center">Edit Task For <%= @goal.title %></h1>

        <%= form_with model: [@goal, @task], local: true do |f| %>
          <% if @task.errors.any? %>
            <ul class="new-error-ul">
              <% @task.errors.full_messages.each do |m| %>
                <li class="alert alert-warning alert-dismissible fade show" role="alert">

                  <strong><%= m %></strong>

                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </li>
              <% end %>
            </ul>
          <% end %>

          <div class="form-group">
            <%#= f.label :name %>
            <%= f.text_field :name, placeholder: "Task Name", class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%#= f.label :description %>
            <%= f.text_field :description, placeholder: "Task Description", class: "form-control" %>
          </div>

          <div class="form-group">
            <%#= f.label :deadline %>
            <%= f.label 'Due Date' %>
            <%= f.date_field :deadline, class: "form-control date-input-width" %>
          </div>

          <div class="form-group">
            <%= f.label :status %>
            <%= f.select :status, ['Started', 'Completed'], {}, {class: "form-control status-input-width"} %>
          </div>

          <div class="form-group mt-4">
            <%= f.submit 'Update Task', class: "btn btn-primary" %>
            <%= link_to 'Cancel', goal_path(@goal), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>