<div>
  <h1>Add Goal</h1>

  <%= form_with scope: :goal, model: @goal, local: true do |f| %>
    <% if @goal.errors.any? %>
      <ul>
        <% @goal.errors.full_messages.each do |m| %>
          <li>
            <strong><%= m %></strong>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
    </div>

    <div>
      <%= f.submit "Add" %>
      <%= link_to 'Cancel', root_path %>
    </div>
    
  <% end %>
</div>