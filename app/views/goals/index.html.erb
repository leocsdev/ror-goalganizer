<section>
  <div class="container">
    <div>
      <h1>All Goals</h1>
      <%= link_to 'Add New Goal', new_goal_path, class: "btn btn-secondary mb-4" %>
    </div>    

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
      <% @goals.each do |goal| %>
        <%= link_to goal, class: "mb-4" do %>
          <div class="col h-100">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title"><%= goal.title %></h3>
              
                <!--<p>
                  Created on <%#= goal.created_at.strftime('%F') %>
                </p>-->
                
                <% if goal.description %>
                  <p class="card-text"><%= goal.description %></p>
                <% end %>

                <%
                  # Get all tasks count
                  allGoals = goal.tasks.count
                  # Get completed tasks count
                  goalsCompleted = goal.tasks.where(status: 'Completed').count
                %> 

                <!-- show status -->
                <div class="my-4">
                  <% if allGoals == 0 %>
                    <h5 class="card-text">No tasks created yet</h5>
                  <% elsif allGoals != 0 && allGoals == goalsCompleted %>
                    <h5 class="card-text">All tasks completed</h5>
                  <% else %>
                    <h5 class="card-text"><%= goalsCompleted %> of <%= allGoals %> tasks completed</h5>
                  <% end %>
                </div>

                <p class="card-text align-self-end mt-auto">
                  <small class="text-muted">
                    Created <%= time_ago_in_words(goal.created_at) %> ago
                  </small>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    
  </div>
</section>

